rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own photos
    match /photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write album photos
    // Note: We use albumId here, not userId, so we allow any auth user to write
    // for now to support shared albums. Tighter controls would require
    // Firestore integration or custom metadata claims.
    match /albums/{albumId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      
      // Explicit sub-match for photos to be sure
      match /photos/{imageId} {
         allow read, write: if request.auth != null;
      }
    }

    // Fallback: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
