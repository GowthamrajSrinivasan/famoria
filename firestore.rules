rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - all authenticated users can read, but can only write their own data
    match /users/{userId} {
      // Any authenticated user can read any user profile (for members list, tags, etc.)
      allow read: if request.auth != null;
      // Users can only create/update/delete their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Photos - social feed with proper access control
    match /photos/{photoId} {
      // Anyone authenticated can read photos (for feed)
      allow read: if request.auth != null;

      // Only authenticated users can create photos
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.authorId;

      // Users can update photos for interactions (likes, comment counts, album assignment)
      // OR if they own the photo
      allow update: if request.auth != null && (
        // Owner can update anything
        request.auth.uid == resource.data.authorId ||
        // Anyone can update likes array and commentsCount for interactions
        (request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['likes', 'commentsCount', 'albumId']))
      );

      // Owner can delete their own photos
      // OR album owner can delete photos in their album (for cascade delete)
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.authorId ||
        (resource.data.albumId != null && 
         exists(/databases/$(database)/documents/albums/$(resource.data.albumId)) &&
         get(/databases/$(database)/documents/albums/$(resource.data.albumId)).data.createdBy == request.auth.uid)
      );

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone authenticated can read comments
        allow read: if request.auth != null;

        // Authenticated users can add comments
        allow create: if request.auth != null;

        // Comment author can update their own comment text
        // Anyone can update likes array (for liking comments)
        allow update: if request.auth != null && (
          // Author can update text and updatedAt
          (request.auth.uid == resource.data.userId &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'updatedAt'])) ||
          // Anyone can update likes only
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
        );

        // Only comment author can delete their comment
        allow delete: if request.auth != null &&
                         request.auth.uid == resource.data.userId;
      }
    }


    // Posts - multi-image posts collection
    match /posts/{postId} {
      // Anyone authenticated can read posts (for feed)
      allow read: if request.auth != null;

      // Only authenticated users can create posts
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.authorId;

      // Users can update posts for interactions (likes, comment counts)
      // OR if they own the post
      allow update: if request.auth != null && (
        // Owner can update anything
        request.auth.uid == resource.data.authorId ||
        // Anyone can update likes array and commentsCount for interactions
        (request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['likes', 'commentsCount']))
      );

      // Only owner can delete
      allow delete: if request.auth != null &&
                       request.auth.uid == resource.data.authorId;

      // Comments subcollection for posts
      match /comments/{commentId} {
        // Anyone authenticated can read comments
        allow read: if request.auth != null;

        // Authenticated users can add comments
        allow create: if request.auth != null;

        // Comment author can update their own comment text
        // Anyone can update likes array (for liking comments)
        allow update: if request.auth != null && (
          // Author can update text and updatedAt
          (request.auth.uid == resource.data.userId &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'updatedAt'])) ||
          // Anyone can update likes only
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
        );

        // Only comment author can delete their comment
        allow delete: if request.auth != null &&
                         request.auth.uid == resource.data.userId;
      }
    }

    // Albums - users can read/write albums they are members of
    match /albums/{albumId} {
      // READ: Allow if user is owner (createdBy/userId) or in members list
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.createdBy || 
        request.auth.uid == resource.data.userId ||
        request.auth.uid in resource.data.members
      );

      // CREATE: Allow creation if authenticated
      allow create: if request.auth != null;

      // UPDATE/DELETE: Allow if owner (legacy userId or createdBy)
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.createdBy ||
        request.auth.uid == resource.data.userId
      );

      // PHOTOS Subcollection
      match /photos/{photoId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;

        // Comments subcollection for album photos
        match /comments/{commentId} {
          // Anyone authenticated can read comments
          allow read: if request.auth != null;

          // Authenticated users can add comments
          allow create: if request.auth != null;

          // Only comment author can delete their comment
          allow delete: if request.auth != null &&
                           request.auth.uid == resource.data.userId;
        }
      }
    }

    // Groups - users can read/write groups they are members of
    match /groups/{groupId} {
      // Any authenticated user can read all groups
      allow read: if request.auth != null;

      // Users can create groups (they will be automatically added as a member)
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.createdBy &&
                       request.auth.uid in request.resource.data.members;

      // Group creator can update
      allow update: if request.auth != null &&
                       request.auth.uid == resource.data.createdBy;
      
      // Group creator OR members can delete
      allow delete: if request.auth != null &&
                       (request.auth.uid == resource.data.createdBy ||
                        request.auth.uid in resource.data.get('members', []));
    }

    // Videos - authenticated users have full access
    match /videos/{videoId} {
      // Any authenticated user can read/write videos
      allow read, write: if request.auth != null;

      // Comments subcollection for videos
      match /comments/{commentId} {
        // Anyone authenticated can read comments
        allow read: if request.auth != null;

        // Authenticated users can add comments
        allow create: if request.auth != null;

        // Comment author can update their own comment text
        // Anyone can update likes array (for liking comments)
        allow update: if request.auth != null && (
          // Author can update text and updatedAt
          (request.auth.uid == resource.data.userId &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'updatedAt'])) ||
          // Anyone can update likes only
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
        );

        // Only comment author can delete their comment
        allow delete: if request.auth != null &&
                         request.auth.uid == resource.data.userId;
      }
    }

    // Video Comments (top-level collection)
    match /video_comments/{commentId} {
      // Anyone authenticated can read comments
      allow read: if request.auth != null;

      // Authenticated users can add comments
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.userId;

      // Comment author can update their own comment
      // Anyone can update likes
      allow update: if request.auth != null && (
        (request.auth.uid == resource.data.userId &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'updatedAt'])) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );

      // Only comment author can delete
      allow delete: if request.auth != null &&
                       request.auth.uid == resource.data.userId;
    }

    // Fallback: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
