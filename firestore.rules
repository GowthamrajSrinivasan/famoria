rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Photos - social feed with proper access control
    match /photos/{photoId} {
      // Anyone authenticated can read photos (for feed)
      allow read: if request.auth != null;

      // Only authenticated users can create photos
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.authorId;

      // Users can update photos for interactions (likes, comment counts)
      // OR if they own the photo
      allow update: if request.auth != null && (
        // Owner can update anything
        request.auth.uid == resource.data.authorId ||
        // Anyone can update likes array and commentsCount for interactions
        (request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['likes', 'commentsCount']))
      );

      // Only owner can delete
      allow delete: if request.auth != null &&
                       request.auth.uid == resource.data.authorId;

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone authenticated can read comments
        allow read: if request.auth != null;

        // Authenticated users can add comments
        allow create: if request.auth != null;

        // Only comment author can delete their comment
        allow delete: if request.auth != null &&
                         request.auth.uid == resource.data.userId;
      }
    }

    // Albums - users can read/write their own albums
    match /albums/{albumId} {
      // Users can read their own albums or shared albums
      allow read: if request.auth != null &&
                     (request.auth.uid == resource.data.userId ||
                      request.auth.uid in resource.data.sharedWith);

      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.userId;

      allow update, delete: if request.auth != null &&
                               request.auth.uid == resource.data.userId;
    }

    // Fallback: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
