rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ⚠️ TEMPORARY: OPEN ACCESS FOR DEVELOPMENT
    // TODO: Add proper security rules before production

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection - anyone can read (for displaying names/avatars), users can write their own
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Photos collection - encrypted photos in albums (Phase 4)
    match /photos/{photoId} {
      // ⚠️ TEMPORARY: Full access for authenticated users
      allow read, write: if isSignedIn();

      // Comments subcollection
      match /comments/{commentId} {
        // ⚠️ TEMPORARY: Full access for authenticated users
        allow read, write: if isSignedIn();
      }
    }

    // Albums - encrypted albums (Phase 4)
    match /albums/{albumId} {
      // ⚠️ TEMPORARY: Full access for authenticated users
      allow read, write: if isSignedIn();
    }

    // Family Members - all authenticated users can read/write
    match /familyMembers/{memberId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Invitations
    match /invitations/{inviteId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() &&
        (resource.data.invitedBy == request.auth.uid ||
         resource.data.get('invitedEmail', '') == request.auth.token.email);
      allow delete: if isSignedIn() &&
        resource.data.invitedBy == request.auth.uid;
    }

    // Notifications - users can only read/write their own
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn() &&
        (resource.data.userId == request.auth.uid ||
         request.resource.data.userId == request.auth.uid);
    }

    // Subscriptions - users can only read their own, only backend can write
    match /subscriptions/{subscriptionId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only backend can write
    }

    // Usage - users can only read their own, only backend can write
    match /usage/{userId} {
      allow read: if isSignedIn() && userId == request.auth.uid;
      allow write: if false; // Only backend can write
    }

    // ========================================
    // ENCRYPTION-SPECIFIC RULES (Phase 0+)
    // ========================================

    // Album Keys - encrypted keys for Family Albums (Phase 4)
    match /albumKeys/{keyId} {
      // ⚠️ TEMPORARY: Full access for authenticated users
      allow read, write: if isSignedIn();
    }

    // All other collections - full access for authenticated users
    match /auditLogs/{logId} {
      allow read, write: if isSignedIn();
    }

    match /shareLinks/{linkId} {
      allow read, write: if isSignedIn();
    }

    match /aiConsent/{consentId} {
      allow read, write: if isSignedIn();
    }

    match /privacyEvents/{eventId} {
      allow read, write: if isSignedIn();
    }

    match /users/{userId}/keyMetadata/{keyId} {
      allow read, write: if isSignedIn();
    }

    match /recoveryRequests/{requestId} {
      allow read, write: if isSignedIn();
    }

    match /users/{userId}/trustedContacts/{contactId} {
      allow read, write: if isSignedIn();
    }

    // ⚠️ TEMPORARY: Allow all authenticated users to read/write any document
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
